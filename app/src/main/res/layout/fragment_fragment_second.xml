<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.jeonjin_il.mysecondapp.Fragment_second">

    <com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar
        android:id="@+id/first_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        app:rcBackgroundColor="#ffffff"
        app:rcBackgroundPadding="2dp"
        app:rcIconBackgroundColor="#ffffff"
        app:rcIconPadding="5dp"
        app:rcIconSize="40dp"
        app:rcIconSrc="@drawable/water"
        app:rcProgressColor="#11aaff"
        app:rcRadius="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/second_borad"
        android:textSize="30dp"
        android:gravity="center"
        android:text="0 / 0"/>


    <ListView
        android:id="@+id/second_listview"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_below="@+id/second_date_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/second_start_date_button"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:onClick="onButtonClicked"
        android:text="조회할 날자를 골라주세요"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/second_date_text"
        android:textSize="30dp"
        android:gravity="center"
        android:text="----/--/--"
        android:layout_below="@+id/first_progress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
